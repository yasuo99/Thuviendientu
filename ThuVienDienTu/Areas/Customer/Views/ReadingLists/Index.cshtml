@model IEnumerable<ThuVienDienTu.Models.ReadingList>

@{
    ViewData["Title"] = "Index";
}
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Danh sách đọc</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-area="Customer" asp-controller="ReadingLists" asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; Thêm danh sách đọc</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReadingListName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReadingListName)
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Index" asp-controller="Home"><i class="far fa-plus-square"></i></a>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-controller="ReadingLists" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                    <a type="button" class="btn btn-success" asp-action="Details" asp-controller="ReadingLists" asp-route-id="@item.Id"><i class="far fa-list-alt"></i></a>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-controller="ReadingLists" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
