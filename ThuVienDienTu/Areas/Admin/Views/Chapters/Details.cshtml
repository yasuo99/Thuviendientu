@model ThuVienDienTu.Models.Chapter

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Chapter</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Chaptername)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chaptername)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ChapterContent)
        </dt>
        <dd class="col-sm-10">
            <textarea id="content" asp-for="@Model.ChapterContent" style="resize:none;width:400px;height:600px;box-shadow:none;border:none;background-color:hsl(40,60%,95%)" disabled></textarea>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EditDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EditDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicationUser)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ApplicationUser.Id)
        </dd>
    </dl>
</div>
@if (User.IsInRole("Librarian") || User.IsInRole("Admin") || User.IsInRole("Censor"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
}
<script>
    $('#content').on("cut copy paste", function (e) {
        e.preventDefault();
    });
</script>