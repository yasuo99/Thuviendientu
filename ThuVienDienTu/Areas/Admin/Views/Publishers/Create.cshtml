@model ThuVienDienTu.Models.Publisher

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/CMS/_CMS.cshtml";
}

<h1>Create</h1>

<h4>Publisher</h4>
<hr />
<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PublisherName" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="PublisherName" class="form-control" />
                <span asp-validation-for="PublisherName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="PublisherLogo" class="control-label"></label>
            </div>
            <div class="col-6">
                <input class="form-control" type="file" name="files" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-6">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="CountryId" class="control-label"></label>
            </div>
            <div class="col-6">
                <select asp-for="CountryId" class="form-control" asp-items="ViewBag.CountryId"></select>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" value="Thêm NXB" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Quay lại</a>
</div>

