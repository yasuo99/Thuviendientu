@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
}
<div class="responsive_tabs_agileits">
    <div id="horizontalTab">

        <div class="resp-tabs-container">
            <!--/tab_one-->
            <div class="tab1">

                <div class="single_page_agile_its_w3ls">
                    <div class="site-section bg-light row">
                        <div class="col-md-4">
                            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                                <h4>Đăng ký tài khoản</h4>
                                <hr />
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <input asp-for="Input.Displayname" placeholder="Tài khoản" class="form-control" autofocus />
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Fullname" placeholder="Họ và tên" class="form-control" autocomplete="off"/>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Address" placeholder="Địa chỉ" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Email" placeholder="Địa chỉ email" class="form-control" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.Password" placeholder="Mật khẩu" class="form-control" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="Input.ConfirmPassword" placeholder="Xác nhận mật khẩu" class="form-control" />
                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label>Ảnh đại diện</label>
                                    <input type="file" name="files" class="form-control">
                                </div>
                                @if (User.IsInRole(ThuVienDienTu.Utility.SD.ADMIN_ROLE))
                                {
                                    <div class="form-group">
                                        <label>Tài khoản admin</label>
                                        <input asp-for="Input.IsAdmin" class="form-control" type="checkbox" />
                                    </div>
                                    <div class="form-group">
                                        <label>Tài khoản thủ thư</label>
                                        <input asp-for="Input.IsLibrarian" class="form-control" type="checkbox" />
                                    </div>
                                    <div class="form-group">
                                        <label>Tài khoản kiểm duyệt</label>
                                        <input asp-for="Input.IsCensor" class="form-control" type="checkbox" />
                                    </div>
                                }
                                <button type="submit" class="btn btn-primary">Đăng ký</button>
                            </form>
                            <div class="form-group">
                                <a href="#fastRegisterModal" data-toggle="modal">Đăng ký nhanh!</a>
                            </div>
                        </div>
